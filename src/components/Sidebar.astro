---
import { getCollection } from "astro:content";
import { AUTHOR } from "../consts";

const allPosts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const popularPosts = allPosts.slice(0, 3);

const allTags = [...new Set(allPosts.flatMap((post) => post.data.tags || []))];
const tagCounts = allTags.map((tag) => ({
	name: tag,
	count: allPosts.filter((post) => (post.data.tags || []).includes(tag))
		.length,
}));
---

<aside class="sidebar">
	<!-- Popular Posts -->
	<div class="sidebar-section">
		<h3 class="sidebar-title">Recent Posts</h3>
		<div class="popular-posts">
			{
				popularPosts.map((post, index) => (
					<a href={`/blog/${post.id}/`} class="popular-post">
						<span class="post-number">{index + 1}</span>
						<div class="post-info">
							<h4>{post.data.title}</h4>
							<span class="post-date">
								{post.data.pubDate.toLocaleDateString("en-US", {
									month: "short",
									day: "numeric",
									year: "numeric",
								})}
							</span>
						</div>
					</a>
				))
			}
		</div>
	</div>

	<!-- Topics -->
	{
		tagCounts.length > 0 && (
			<div class="sidebar-section tag-cloud">
				<h3 class="sidebar-title">Topics</h3>
				<div class="cloud">
					{tagCounts.map((tag) => (
						<a
							href={`/blog/tag/${tag.name}`}
							class="cloud-item"
							style={`--size:${Math.min(2.5, 0.8 + Math.log(tag.count) / Math.log(2))}rem`}
						>
							{tag.name}
						</a>
					))}
				</div>
			</div>
		)
	}

	<!-- About Author -->
	<div class="sidebar-section">
		<h3 class="sidebar-title">About the Author</h3>
		<div class="author-bio">
			<div class="author-avatar">
				<img src={AUTHOR.avatar} alt={AUTHOR.name} />
			</div>
			<div class="author-info">
				<h4>{AUTHOR.name}</h4>
				<p>{AUTHOR.bio}</p>
				<div class="author-links">
					{
						AUTHOR.social.medium && (
							<a
								href={AUTHOR.social.medium}
								target="_blank"
								rel="noopener"
								class="author-link"
							>
								Medium
							</a>
						)
					}
					{
						AUTHOR.social.github && (
							<a
								href={AUTHOR.social.github}
								target="_blank"
								rel="noopener"
								class="author-link"
							>
								GitHub
							</a>
						)
					}
				</div>
			</div>
		</div>
	</div>
</aside>

<style>
	.sidebar {
		width: 100%;
		max-width: 320px;
	}

	.sidebar-section {
		background: white;
		border: 1px solid var(--border);
		border-radius: var(--card-radius);
		padding: 24px;
		margin-bottom: 24px;
	}

	.sidebar-title {
		font-size: 16px;
		font-weight: 700;
		color: var(--primary);
		margin-bottom: 16px;
		padding-bottom: 8px;
		border-bottom: 1px solid var(--border-light);
	}

	/* Popular/*
