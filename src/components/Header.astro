---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
	<div class="header-container">
		<div class="header-brand">
			<a href="/" class="brand-link">
				<span class="brand-title">{SITE_TITLE}</span>
				<span class="brand-tagline">Software Architecture & AI Development</span>
			</a>
		</div>
		<nav class="header-nav">
			<HeaderLink href="/">Latest</HeaderLink>
			<HeaderLink href="/blog">Archive</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</nav>
	</div>
</header>

<style>
	.site-header {
		background: white;
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
	}
	
	.header-container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 var(--content-padding);
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 72px;
	}
	
	.header-brand {
		flex-shrink: 0;
	}
	
	.brand-link {
		text-decoration: none;
		color: var(--primary);
		display: block;
	}
	
	.brand-title {
		font-family: var(--font-primary);
		font-size: 20px;
		font-weight: 800;
		letter-spacing: -0.02em;
		display: block;
		line-height: 1.2;
	}
	
	.brand-tagline {
		font-size: 12px;
		color: var(--secondary);
		font-weight: 400;
		margin-top: 2px;
		display: block;
		letter-spacing: 0;
	}
	
	.header-nav {
		display: flex;
		align-items: center;
		gap: 32px;
	}
	
	@media (max-width: 768px) {
		.header-container {
			min-height: 64px;
		}
		
		.header-nav {
			gap: 20px;
		}
		
		.brand-title {
			font-size: 18px;
		}
		
		.brand-tagline {
			font-size: 11px;
		}
	}

	@media (max-width: 640px) {
		.header-nav {
			gap: 16px;
		}
	}
</style>