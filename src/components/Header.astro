---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
	<div class="header-container">
		<div class="header-brand">
			<a href="/" class="brand-link">
				<span class="brand-title">{SITE_TITLE}</span>
				<span class="brand-tagline">Weekly insights for ambitious professionals</span>
			</a>
		</div>
		<nav class="header-nav">
			<HeaderLink href="/">Latest</HeaderLink>
			<HeaderLink href="/blog">Archive</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<button class="subscribe-btn">
				<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
					<polyline points="22,6 12,13 2,6"></polyline>
				</svg>
				Subscribe
			</button>
		</nav>
	</div>
</header>

<style>
	.site-header {
		background: white;
		border-bottom: 1px solid var(--border);
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
	}
	
	.header-container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 var(--content-padding);
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 72px;
	}
	
	.header-brand {
		flex-shrink: 0;
	}
	
	.brand-link {
		text-decoration: none;
		color: var(--primary);
		display: block;
	}
	
	.brand-title {
		font-family: var(--font-primary);
		font-size: 20px;
		font-weight: 800;
		letter-spacing: -0.02em;
		display: block;
		line-height: 1.2;
	}
	
	.brand-tagline {
		font-size: 12px;
		color: var(--secondary);
		font-weight: 400;
		margin-top: 2px;
		display: block;
		letter-spacing: 0;
	}
	
	.header-nav {
		display: flex;
		align-items: center;
		gap: 32px;
	}
	
	.subscribe-btn {
		display: flex;
		align-items: center;
		gap: 8px;
		background: var(--accent);
		color: white;
		border: none;
		padding: 10px 20px;
		border-radius: 6px;
		font-weight: 600;
		font-size: 14px;
		cursor: pointer;
		transition: all 0.2s ease;
		font-family: var(--font-primary);
	}
	
	.subscribe-btn:hover {
		background: var(--accent-hover);
		transform: translateY(-1px);
	}
	
	@media (max-width: 768px) {
		.header-container {
			min-height: 64px;
		}
		
		.header-nav {
			gap: 20px;
		}
		
		.brand-title {
			font-size: 18px;
		}
		
		.brand-tagline {
			font-size: 11px;
		}
		
		.subscribe-btn {
			padding: 8px 16px;
			font-size: 13px;
		}
	}
	
	@media (max-width: 640px) {
		.header-nav {
			gap: 16px;
		}
		
		.subscribe-btn span {
			display: none;
		}
		
		.subscribe-btn {
			padding: 8px 12px;
		}
	}
</style>