---
import FormattedDate from './FormattedDate.astro';
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	heroImage?: any;
	slug: string;
	featured?: boolean;
	category?: string;
	readingTime?: number;
}

const { title, description, pubDate, heroImage, slug, featured = false, category, readingTime = 5 } = Astro.props;
---

<article class={`post-card ${featured ? 'featured' : ''}`}>
	<a href={`/blog/${slug}/`} class="post-link">
		{heroImage && (
			<div class="post-image">
				<Image 
					src={heroImage} 
					alt={title}
					width={featured ? 600 : 300}
					height={featured ? 300 : 180}
					loading="lazy"
				/>
			</div>
		)}
		<div class="post-content">
			<h3 class="post-title">{title}</h3>
			<p class="post-description">{description}</p>
			<div class="post-meta">
				<FormattedDate date={pubDate} />
				<span class="reading-time">{readingTime} min read</span>
				{category && <span class="post-category">{category}</span>}
			</div>
		</div>
	</a>
</article>

<style>
	.post-card {
		background: white;
		border: 1px solid var(--border);
		border-radius: var(--card-radius);
		overflow: hidden;
		transition: all 0.2s ease;
		margin-bottom: 24px;
	}
	
	.post-card:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
		border-color: var(--accent);
	}
	
	.post-card.featured {
		border: 2px solid var(--accent);
		background: linear-gradient(135deg, rgba(0, 102, 204, 0.02) 0%, rgba(0, 102, 204, 0.05) 100%);
	}
	
	.post-link {
		display: block;
		text-decoration: none;
		color: inherit;
	}
	
	.post-image {
		width: 100%;
		height: 180px;
		overflow: hidden;
		background: var(--background-alt);
	}
	
	.featured .post-image {
		height: 240px;
	}
	
	.post-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
		margin: 0;
	}
	
	.post-card:hover .post-image img {
		transform: scale(1.05);
	}
	
	.post-content {
		padding: 20px;
	}
	
	.post-title {
		font-size: 18px;
		font-weight: 700;
		color: var(--primary);
		margin-bottom: 8px;
		line-height: 1.3;
		letter-spacing: -0.02em;
	}
	
	.featured .post-title {
		font-size: 22px;
		margin-bottom: 12px;
	}
	
	.post-description {
		color: var(--secondary);
		font-size: 14px;
		line-height: 1.5;
		margin-bottom: 16px;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.featured .post-description {
		font-size: 15px;
		-webkit-line-clamp: 3;
	}
	
	.post-meta {
		display: flex;
		align-items: center;
		gap: 12px;
		font-size: 12px;
		color: var(--text-muted);
		flex-wrap: wrap;
	}
	
	.post-meta > * {
		position: relative;
	}
	
	.post-meta > *:not(:first-child)::before {
		content: 'â€¢';
		position: absolute;
		left: -8px;
		color: var(--border);
	}
	
	.post-category {
		background: var(--background-alt);
		color: var(--accent);
		padding: 2px 8px;
		border-radius: 12px;
		font-weight: 500;
		font-size: 11px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}
	
	.post-category::before {
		display: none;
	}
	
	@media (max-width: 768px) {
		.post-content {
			padding: 16px;
		}
		
		.post-title {
			font-size: 16px;
		}
		
		.featured .post-title {
			font-size: 18px;
		}
		
		.post-description {
			font-size: 13px;
		}
		
		.post-meta {
			font-size: 11px;
			gap: 8px;
		}
	}
</style>