---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import Sidebar from '../components/Sidebar.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const recentPosts = posts.slice(1, 7);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Newsletter Header -->
			<section class="newsletter-header">
				<div class="issue-info">
					<span class="issue-number">Issue #247</span>
					<span class="issue-date">December 22, 2024</span>
				</div>
				<h1 class="newsletter-title">This week in product, growth, and career</h1>
				<p class="newsletter-intro">
					Your weekly dose of insights, frameworks, and actionable advice to level up your career. 
					This week: building better product roadmaps, the psychology of user onboarding, and career moves that actually matter.
				</p>
			</section>

			<div class="content-layout">
				<div class="main-content">
					<!-- Featured Story -->
					{featuredPost && (
						<section class="newsletter-section">
							<div class="section-header">
								<h2 class="section-title">ðŸ”¥ Featured Story</h2>
								<p class="section-subtitle">The most important read this week</p>
							</div>
							<PostCard 
								title={featuredPost.data.title}
								description={featuredPost.data.description}
								pubDate={featuredPost.data.pubDate}
								heroImage={featuredPost.data.heroImage}
								slug={featuredPost.id}
								featured={true}
							/>
						</section>
					)}

					<!-- Recent Stories -->
					<section class="newsletter-section">
						<div class="section-header">
							<h2 class="section-title">ðŸ“š Recent Stories</h2>
							<p class="section-subtitle">Catch up on what you might have missed</p>
						</div>
						<div class="posts-grid">
							{recentPosts.map((post) => (
								<PostCard 
									title={post.data.title}
									description={post.data.description}
									pubDate={post.data.pubDate}
									heroImage={post.data.heroImage}
									slug={post.id}
								/>
							))}
						</div>
						<div class="view-archive">
							<a href="/blog" class="btn btn-outline">View Full Archive â†’</a>
						</div>
					</section>

					<!-- Quick Insights -->
					<section class="newsletter-section">
						<div class="section-header">
							<h2 class="section-title">ðŸ’¡ Quick Insights</h2>
							<p class="section-subtitle">Bite-sized wisdom for busy professionals</p>
						</div>
						<div class="insights-grid">
							<div class="insight-card">
								<h3>Product Tip</h3>
								<p>Always validate your assumptions with real user data before building new features. A simple user interview can save weeks of development time.</p>
							</div>
							<div class="insight-card">
								<h3>Growth Hack</h3>
								<p>The best growth loops are invisible to users but create compounding value. Focus on natural sharing moments in your product experience.</p>
							</div>
							<div class="insight-card">
								<h3>Career Move</h3>
								<p>Document your wins weekly, not annually. When promotion time comes, you'll have concrete examples of your impact ready to go.</p>
							</div>
						</div>
					</section>
				</div>

				<Sidebar />
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Newsletter Header */
	.newsletter-header {
		text-align: center;
		padding: 40px 0 60px;
		border-bottom: 1px solid var(--border);
		margin-bottom: 48px;
	}
	
	.issue-info {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 16px;
		margin-bottom: 16px;
		font-size: 14px;
		color: var(--text-muted);
	}
	
	.issue-number {
		background: var(--accent);
		color: white;
		padding: 4px 12px;
		border-radius: 12px;
		font-weight: 600;
		font-size: 12px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}
	
	.issue-date::before {
		content: 'â€¢';
		margin-right: 16px;
		color: var(--border);
	}
	
	.newsletter-title {
		font-size: clamp(28px, 5vw, 42px);
		font-weight: 800;
		color: var(--primary);
		margin-bottom: 16px;
		letter-spacing: -0.03em;
		line-height: 1.2;
	}
	
	.newsletter-intro {
		font-size: 16px;
		line-height: 1.6;
		color: var(--secondary);
		max-width: 600px;
		margin: 0 auto;
	}
	
	/* Content Layout */
	.content-layout {
		display: grid;
		grid-template-columns: 1fr 320px;
		gap: 48px;
		align-items: start;
	}
	
	.main-content {
		min-width: 0;
	}
	
	/* Posts Grid */
	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 24px;
		margin-bottom: 32px;
	}
	
	.view-archive {
		text-align: center;
	}
	
	/* Quick Insights */
	.insights-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 20px;
	}
	
	.insight-card {
		background: var(--background-alt);
		border: 1px solid var(--border-light);
		border-radius: var(--card-radius);
		padding: 20px;
		transition: all 0.2s ease;
	}
	
	.insight-card:hover {
		background: white;
		border-color: var(--accent);
		box-shadow: var(--shadow-sm);
	}
	
	.insight-card h3 {
		font-size: 14px;
		font-weight: 700;
		color: var(--accent);
		margin-bottom: 8px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}
	
	.insight-card p {
		font-size: 14px;
		line-height: 1.5;
		color: var(--secondary);
		margin: 0;
	}
	
	/* Responsive Design */
	@media (max-width: 1024px) {
		.content-layout {
			grid-template-columns: 1fr;
			gap: 32px;
		}
	}
	
	@media (max-width: 768px) {
		.newsletter-header {
			padding: 32px 0 40px;
			margin-bottom: 32px;
		}
		
		.issue-info {
			flex-direction: column;
			gap: 8px;
		}
		
		.issue-date::before {
			display: none;
		}
		
		.posts-grid {
			grid-template-columns: 1fr;
		}
		
		.insights-grid {
			grid-template-columns: 1fr;
			gap: 16px;
		}
		
		.content-layout {
			gap: 24px;
		}
	}
	
	@media (max-width: 480px) {
		.newsletter-header {
			padding: 24px 0 32px;
		}
		
		.insight-card {
			padding: 16px;
		}
	}
</style>